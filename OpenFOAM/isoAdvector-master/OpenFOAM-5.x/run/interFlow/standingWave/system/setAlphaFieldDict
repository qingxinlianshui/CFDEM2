FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setAlphaFieldDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

field     "alpha.water";
type      sin;
direction (1 0 0);
up        (0 0 1);
centre    (-.5 0 .5);
period    2;
amplitude .05;

